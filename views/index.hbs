<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <div class="search-category d-flex justify-content-between align-items-center mt-2 mb-2">
          <h4 class="">尋找餐廳：</h4>
          <div class="d-none d-sm-flex">
            <a class="btn btn-major mr-2" href="/search?keyword=中東料理">中東料理</a>
            <a class="btn btn-major mr-2" href="/search?keyword=咖啡">咖啡</a>
            <a class="btn btn-major mr-2" href="/search?keyword=美式">美式</a>
            <a class="btn btn-major mr-2" href="/search?keyword=義式餐廳">義式餐廳</a>
            <a class="btn btn-major" href="/search?keyword=酒吧">酒吧</a>
          </div>

          <div class="dropdown d-block d-sm-none">
            <button class="btn btn-major dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
              aria-haspopup="true" aria-expanded="false">
              依餐廳類別尋找：
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item" href="/search?keyword=中東料理">中東料理</a>
              <a class="dropdown-item" href="/search?keyword=咖啡">咖啡</a>
              <a class="dropdown-item" href="/search?keyword=美式">美式</a>
              <a class="dropdown-item" href="/search?keyword=義式餐廳">義式餐廳</a>
              <a class="dropdown-item" href="/search?keyword=酒吧">酒吧</a>
            </div>
          </div>
        </div>
        
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳名稱關鍵字搜尋" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5 index">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="items card-columns">
        {{#each restaurants}}
        <div class="item mb-3">
          <a href="/restaurants/{{this._id}}" class="text-secondary">
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}"
                alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name}}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{this.category}}
                </div>

                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
            
              </div>
            </div>
          </a>
          <div class="control-panel">
            <a class="edit" href="/restaurants/{{ this._id }}/edit"><i class="fas fa-edit"></i></a>
            <form class="delete-form" action="/restaurants/{{ this._id }}/delete" method="POST">
              <button class="delete" type="submit"><i class="fas fa-trash-alt"></i></button>
            </form>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>